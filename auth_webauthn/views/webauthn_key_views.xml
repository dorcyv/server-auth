<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="webauthn_key_view_tree" model="ir.ui.view">
        <field name="name">webauthn.key.view.tree</field>
        <field name="model">webauthn.key</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="webauthn_key_view_form" model="ir.ui.view">
        <field name="name">webauthn.key.view.form</field>
        <field name="model">webauthn.key</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="create_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="webauthn_key_view_form_create" model="ir.ui.view">
        <field name="name">webauthn.key.view.form.create</field>
        <field name="model">webauthn.key</field>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <form js_class="webauthn_key_form_view">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <footer>
                        <button type="object"
                                name="action_create_webauthn_key"
                                string="Create"
                                class="btn-primary"/>
                        <button special="cancel"
                                string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
